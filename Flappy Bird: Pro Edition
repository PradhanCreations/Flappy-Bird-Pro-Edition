mport React, { useState, useEffect, useCallback } from 'react';
import { GameStatus } from './types';
import GameCanvas from './components/GameCanvas';
import { getGameTip } from './services/geminiService';

const App: React.FC = () => {
  const [status, setStatus] = useState<GameStatus>(GameStatus.START);
  const [score, setScore] = useState(0);
  const [highScore, setHighScore] = useState(0);
  const [aiTip, setAiTip] = useState<string>("");
  const [isLoadingTip, setIsLoadingTip] = useState(false);

  useEffect(() => {
    const saved = localStorage.getItem('sky-hopper-highscore');
    if (saved) setHighScore(parseInt(saved, 10));
  }, []);

  const handleGameOver = useCallback(async (finalScore: number) => {
    setScore(finalScore);
    setStatus(GameStatus.GAME_OVER);
    
    if (finalScore > highScore) {
      setHighScore(finalScore);
      localStorage.setItem('sky-hopper-highscore', finalScore.toString());
    }

    setIsLoadingTip(true);
    const tip = await getGameTip(finalScore);
    setAiTip(tip);
    setIsLoadingTip(false);
  }, [highScore]);

  const handleScoreUpdate = useCallback((newScore: number) => {
    setScore(newScore);
  }, []);

  const requestFullscreen = () => {
    if (document.documentElement.requestFullscreen) {
      document.documentElement.requestFullscreen().catch(() => {});
    }
  };

  const restartGame = () => {
    setScore(0);
    setAiTip("");
    setStatus(GameStatus.PLAYING);
  };

  const startGame = () => {
    requestFullscreen();
    setStatus(GameStatus.PLAYING);
  };

  return (
    <div className="relative w-full h-screen overflow-hidden bg-black flex items-center justify-center">
      <div className="relative w-full max-w-md h-full bg-white shadow-2xl overflow-hidden">
        <GameCanvas 
          status={status} 
          onGameOver={handleGameOver} 
          onScoreUpdate={handleScoreUpdate}
        />

        {status === GameStatus.START && (
          <div 
            className="absolute inset-0 bg-black/40 backdrop-blur-[2px] flex flex-col items-center justify-center text-white p-6 cursor-pointer"
            onClick={startGame}
          >
            <h1 className="text-5xl font-black mb-4 tracking-tighter drop-shadow-lg">SKY HOPPER</h1>
            <div className="w-24 h-24 mb-8 animate-bounce flex items-center justify-center">
               <div className="w-12 h-12 bg-yellow-400 rounded-full border-4 border-black relative shadow-xl">
                  <div className="absolute top-2 right-2 w-4 h-4 bg-white rounded-full border-2 border-black"></div>
                  <div className="absolute top-4 right-[-4px] w-6 h-4 bg-orange-500 rounded-md"></div>
               </div>
            </div>
            <p className="text-xl font-bold animate-pulse">TAP TO START</p>
            <div className="mt-12 text-center text-sm opacity-80 bg-black/40 px-4 py-2 rounded-full">
              <p>Pro Mode: Dynamic Pipes Enabled</p>
            </div>
          </div>
        )}

        {status === GameStatus.PLAYING && (
          <div className="absolute top-10 w-full text-center pointer-events-none">
            <span className="text-7xl font-black text-white drop-shadow-[0_4px_4px_rgba(0,0,0,0.5)]">{score}</span>
          </div>
        )}

        {status === GameStatus.GAME_OVER && (
          <div className="absolute inset-0 bg-black/70 backdrop-blur-md flex flex-col items-center justify-center text-white p-6 animate-in fade-in duration-500">
            <h2 className="text-4xl font-black mb-2 text-red-500 italic uppercase drop-shadow-lg">Game Over</h2>
            
            <div className="bg-white/10 p-6 rounded-2xl border border-white/20 w-full mb-6 text-center shadow-2xl">
              <p className="text-gray-300 text-sm uppercase tracking-widest mb-1">Final Score</p>
              <p className="text-6xl font-black mb-4 text-white">{score}</p>
              
              <div className="h-px bg-white/10 mb-4"></div>
              
              <p className="text-gray-300 text-sm uppercase tracking-widest mb-1">Personal Best</p>
              <p className="text-2xl font-bold text-yellow-400">{highScore}</p>
            </div>

            <div className="mb-8 px-4 text-center min-h-[4rem] flex items-center justify-center italic text-gray-200">
              {isLoadingTip ? (
                <div className="flex gap-1">
                  <div className="w-2 h-2 bg-white rounded-full animate-bounce"></div>
                  <div className="w-2 h-2 bg-white rounded-full animate-bounce [animation-delay:-0.15s]"></div>
                  <div className="w-2 h-2 bg-white rounded-full animate-bounce [animation-delay:-0.3s]"></div>
                </div>
              ) : (
                <p className="text-lg leading-tight font-medium">"{aiTip}"</p>
              )}
            </div>

            <button 
              onClick={restartGame}
              className="bg-yellow-400 hover:bg-yellow-300 text-black px-10 py-4 rounded-full font-black text-xl transition-all transform hover:scale-105 active:scale-95 shadow-[0_4px_0_#b89b00] active:translate-y-1 active:shadow-none uppercase"
            >
              Play Again
            </button>
          </div>
        )}
      </div>
    </div>
  );
};

export default App;
